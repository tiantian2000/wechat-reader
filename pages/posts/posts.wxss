/* pages/posts/posts.wxss */
.wrapper {
  background-color: #b3d4db;
}

swiper {
  width:100%;
  height:320rpx;
}

swiper image {
    width:100%;
    height:320rpx;   
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-container .author {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-container .author .avatar{
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.post-container .author .date{
  margin-left: 20rpx;
  font-size: 26rpx;
  vertical-align: middle;
}

.post-container .title {
  font-size: 34rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-container .title-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx;  
}

.post-container .content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-container .post-like {
  display: flex;
  flex-direction: grow;
}

.post-container .post-like-img {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8px;
  vertical-align: middle;
}

.post-container .post-like-title {
  vertical-align: midde;
  color: #666;
  margin-left: 5px;
  margin-right: 20px;
  font-size: 18rpx;
}