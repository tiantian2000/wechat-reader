<!--pages/posts/static-detail/static-detail.wxml-->
<view class="detail-container">
  <image src="{{record.imgSrc}}" class="header-image"></image>
  <image src="/images/music/music-start.png" class="audio"></image>
  <view class="author-date">
    <image src="{{record.avatar}}" class="avatar"></image>
    <text class="author">{{record.author}}</text>
    <text class="const-text">发表于</text>
    <text class="const-text">{{record.dateTime}}</text>
  </view>
  <text class="title">{{record.title}}</text>
  <view class="tool">
    <view class="cyrcle-img">
      <image src="/images/icon/collection.png" class="avatar"></image>
      <image src="/images/icon/share.png" class="avatar"></image>
    </view>
    <view class="horizon"></view>    
  </view>
  <text class="detail">{{record.content}}</text>
</view>
