/* pages/music/rank/rank.wxss */
.rank .header {
  position: relative;
  width: 100%;
  height: 350rpx;
}

.rank .header .img {
  width: 100%;
  height: 350rpx;
}

.rank .header .update {
  position: absolute;
  bottom: 10rpx;
  left: 40rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}

.rank .cur {
  background-color: rgba(195, 209, 240, 0.2)
}

.rank .song {
  margin: 40rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.rank .song .first-rank {
  margin-right: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #e80000;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}

.rank .song .second-rank {
  margin-right: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #ff7200;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}

.rank .song .third-rank {
  margin-right: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background: #f8b300;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}

.rank .song .index-rank {
  margin-right: 20rpx;
  padding: 10rpx 30rpx;
  color: #999;
  font-size: 26rpx;
  font-weight: bold;
}

.rank .song .name {
  margin-right:auto;
  font-size: 26rpx;
  color: #666;}

.rank .song .img {
  padding:20rpx;
  width: 40rpx;
  height: 40rpx;
}

.rank .hr {  
  margin: 40rpx;
  height: 1px;
  background-color: #d9d9d9;
}


