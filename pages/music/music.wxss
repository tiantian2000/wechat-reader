/* pages/music/music.wxss */
.search {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #f2f2f2;
}

.search .icon-img {
  margin: auto 0 auto 20rpx
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.search .placeholder {
   font-size: 24rpx;
   color: #d1d1d1;
   margin-left: 20rpx;
}

.search .cancel-img {
  height: 30rpx;
  width: 30rpx;
  padding: 15rpx;
  margin: auto 0 auto 30rpx;
}
.rank-container {
  margin: 10rpx 20rpx 0;
}

.rank {
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
  align-items:center;
}

.rank .img {
  width: 280rpx;
  height: 280rpx;
  margin-right: 20rpx;
}

.rank .name {
  font-size: 18px;
  color: #666;
}


.search-song .cur {
  background-color: rgba(195, 209, 240, 0.2)
}

.search-song  .song {
  margin: 40rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-song .song .index-rank {
  margin-right: 20rpx;
  padding: 10rpx 30rpx;
  color: #999;
  font-size: 26rpx;
  font-weight: bold;
}

.search-song  .song .name {
  margin-right:auto;
  font-size: 26rpx;
  color: #666;}

.search-song  .song .img {
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
}

.search-song  .hr {  
  margin: 40rpx;
  height: 1px;
  background-color: #d9d9d9;
}